
<% if user_signed_in? && (current_user.id == 1 || (Rails.env.development? && current_user.id == 2)) %>

	<h1>Editing Post</h1>

	<%= render 'form', post: @post %>

	<%= link_to 'Show', @post %> |
	<%= link_to 'Back', posts_path %>

<% else %>


	<script type="text/javascript">
		window.location.href="/posts";
	</script>

<% end %>
